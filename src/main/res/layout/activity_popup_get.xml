<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DEEDF9">

    <!-- 타이틀바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#64B5F6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="          좀도와주숙"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/closeButton2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/close_clear_cancel" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/supplies"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="필요한 물품" />

        <TextView
            android:id="@+id/supplies_list"
            android:layout_width="192dp"
            android:layout_height="39dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="22dp"
            android:text="골라주세요" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="192dp"
            android:layout_height="39dp"
            android:visibility="gone"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="직접 작성해주세요" />
        <Button
            android:id="@+id/returnBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="10dp"
            android:textColor="#FF8A65"
            android:text="취소" />


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/departure"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="현재 위치" />

        <EditText
            android:id="@+id/whereAmI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="명신관 101호" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />



    <Button
        android:id="@+id/getHelpFin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#8EE9EE"
        android:text="입력 완료" />

</LinearLayout>